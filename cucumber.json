{
  "default": {
    "paths": ["features/*.feature"],
    "dryRun": false,
    "retry": 0,
    "parallel": 0,
    "forceExit": true,
    "require": ["step_definitions/*.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "json:reports/cucumber-report.json",
      "junit:reports/cucumber-report.xml",
      "rerun:reports/rerun.txt"
    ]
  }
}
